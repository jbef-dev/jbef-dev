{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@app/*": [
        "./app/*"
      ],
      "@components/*": [
        "./app/components/*"
      ],
      "@config/*": [
        "./config/*"
      ],
      "@i18n/*": [
        "./i18n/*"
      ],
      "@hooks/*": [
        "./hooks/*"
      ],
      "@styles/*": [
        "./styles/*"
      ],
      "@ui/*": [
        "./app/ui/*"
      ],
      "@util/*": [
        "./util/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "target": "es5"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
